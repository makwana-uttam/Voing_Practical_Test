@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form id="registrationForm">
        <div class="container">
            <h1>Registration</h1>
            <hr>
            <div class="form-group">
                <label for="txtfullname"><b>Full Name<span class="text-danger">*</span></b></label>
                <input type="text" class="form-control" placeholder="Enter Full Name" name="txtfullname" id="txtfullname" required>
            </div>

            <div class="form-group">
                <label for="txtemail"><b>Email <span class="text-danger">*</span></b></label>
                <input type="text" class="form-control" placeholder="Enter Email" name="txtemail" id="txtemail" required>
            </div>
            <div class="form-group">
                <label for="txtpsw"><b>Password <span class="text-danger">*</span></b></label>
                <input type="password" class="form-control" placeholder="Enter Password" name="txtpsw" id="txtpsw" required>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" id="btnregister">Register</button>
                <button type="button" class="btn btn-danger" id="btnclear">Clear</button>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <!-- below we are including the jQuery and jQuery plugin .js files -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
    </script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js">
    </script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js">
    </script>

    <script src="~/js/site.js"></script>
}